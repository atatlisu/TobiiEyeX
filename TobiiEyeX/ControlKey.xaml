<UserControl x:Class="TobiiEyeX.ControlKey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TobiiEyeX"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Height="54" MouseEnter="onMouseEnter" MouseLeave="onMouseleave">
    <Grid>
        <Image x:Name="image" Height="54" Margin="0" Width="68" Source="img/Keyboard/controlKey.png"/>
        <Canvas x:Name="shadow" Background="#FF342A2A" Opacity="0" />
        <Label x:Name="topLegend" Content="{Binding Path=TopLegend}" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Width="53" Height="24"/>

    </Grid>
</UserControl>
