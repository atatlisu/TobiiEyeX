<UserControl x:Class="TobiiEyeX.DefaultKey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TobiiEyeX"
             mc:Ignorable="d" 
             d:DesignHeight="54" d:DesignWidth="54" Width="54" HorizontalAlignment="Center" Height="54" VerticalAlignment="Center" MouseEnter="onMouseEnter" MouseLeave="onMouseleave" Foreground="{x:Null}">
    <Grid>
        <Image x:Name="image" Height="54" Margin="0,0,0,0" Width="54" Source="img/Keyboard/key.png"/>
        <Canvas x:Name="shadow" Background="#FF342A2A" Opacity="0" />
        <Label x:Name="topLegend" Content="{Binding Path=TopLegend}" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Height="24"/>
        <Label x:Name="botLegend" Content="{Binding Path=BotLegend}" HorizontalAlignment="Left" Margin="5,23,0,0" VerticalAlignment="Top" Height="24"/>

    </Grid>
</UserControl>
